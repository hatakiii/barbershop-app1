generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Salon {
  id           Int       @id @default(autoincrement()) @map("id")
  name         String    @map("name") @db.VarChar(100)
  salonImage   String?   @db.VarChar(500)
  salonAddress String?   @db.VarChar(500)
  managerId    String?
  barbers      Barber[]
  services     Service[]
  users        User[]

  @@map("salons")
}

model Service {
  id           Int            @id @default(autoincrement()) @map("id")
  salon_id     Int?
  gender       String?        @map("gender") @db.VarChar(10)
  name         String?        @map("name") @db.VarChar(100)
  price        Int?           @map("price")
  appointments appointments[]
  salons       Salon?         @relation(fields: [salon_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "services_category_id_fkey")

  @@map("services")
}

model Barber {
  id           Int            @id @default(autoincrement()) @map("id")
  salon_id     Int?
  name         String?        @map("name") @db.VarChar(100)
  phoneNumber  String?
  avatarUrl    String?        @map("avatarUrl")
  appointments appointments[]
  salons       Salon?         @relation(fields: [salon_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "barbers_category_id_fkey")
  users        User[]

  @@map("barbers")
}

model User {
  id           Int            @id @default(autoincrement())
  password     String         @unique
  email        String         @unique @db.VarChar(50)
  name         String?        @db.VarChar(59)
  role         String?        @db.VarChar
  salon_id     Int?
  barberId     Int?           @map("barberid")
  appointments appointments[]
  barber       Barber?        @relation(fields: [barberId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  salons       Salon?         @relation(fields: [salon_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "users_categoryid_fkey")

  @@map("users")
}

model appointments {
  id               Int       @id @default(autoincrement())
  user_id          Int
  barber_id        Int
  service_id       Int
  appointment_time DateTime  @db.Timestamptz(6)
  status           String?   @default("pending") @db.VarChar(50)
  created_at       DateTime? @default(now()) @db.Timestamptz(6)
  barbers          Barber    @relation(fields: [barber_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_appointments_barber")
  services         Service   @relation(fields: [service_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_appointments_service")
  users            User      @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_appointments_user")
  orders           orders[]
}

model orders {
  id             Int          @id @default(autoincrement())
  appointment_id Int
  total_price    Int
  payment_method String?      @default("cash") @db.VarChar(30)
  payment_status String?      @default("unpaid") @db.VarChar(20)
  created_at     DateTime?    @default(now()) @db.Timestamp(6)
  appointments   appointments @relation(fields: [appointment_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_orders_appointment")
}
